<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentUserType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:focusable="true">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView style="@style/tv_header"
                android:gravity="center"
                android:text="@string/choose_the_day"/>
        </RelativeLayout>
        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView style="@style/tv_header_medium"
                    android:id="@+id/tv_monthly"
                    android:text="Monthly"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/btn_primary"/>
                <TextView style="@style/tv_header_medium"
                    android:text="Weekly"
                    android:id="@+id/tv_weekly"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/border_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView style="@style/tv_header_medium"
                        android:text="Sunday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_sunday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:text="Monday"
                        android:id="@+id/tv_monday"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/btn_gray"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:text="Tuesday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_tuesday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView style="@style/tv_header_medium"
                        android:text="Wednesday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_wednesday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight=".8"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:text="Thursday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_thursday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight=".9"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:text="Friday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_friday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView style="@style/tv_header_medium"
                        android:text="Saturday"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/tv_saturday"
                        android:background="@drawable/btn_gray"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                    <TextView style="@style/tv_header_medium"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
                </LinearLayout>
               <TextView style="@style/tv_title"
                   android:text="OR"
                   android:layout_gravity="center"
                   android:layout_margin="@dimen/_5sdp"/>
                <TextView style="@style/tv_header_medium"
                    android:text="Everyday"
                    android:id="@+id/tv_everyday"
                    android:background="@drawable/btn_gray"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"/>
                <TextView style="@style/tv_header_medium"
                    android:text="Choose The Time"
                    android:id="@+id/tv_time"
                    android:visibility="gone"
                    android:background="@drawable/btn_gray"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />
                <Button
                    android:id="@+id/btn_submit"
                    style="@style/btn_primary"
                    android:text="@string/submit"
                    android:textAllCaps="false" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>