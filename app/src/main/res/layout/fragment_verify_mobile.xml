<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.FragmentUserType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView style="@style/img_back"
                android:id="@+id/img_back"/>
            <TextView style="@style/tv_header_2"
                android:text="Verification"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">
                <TextView
                    style="@style/tv_title"
                    android:gravity="center"
                    android:text="We texted you a code to verify your phone number."
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_1"
                    style="@style/et_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="*"
                    android:background="@drawable/et_bg"
                    android:layout_margin="@dimen/_5sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"/>
                    <EditText
                        android:id="@+id/et_2"
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="*"
                        android:background="@drawable/et_bg"
                        android:layout_margin="@dimen/_5sdp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_3"
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="*"
                        android:background="@drawable/et_bg"
                        android:layout_margin="@dimen/_5sdp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_4"
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="*"
                        android:background="@drawable/et_bg"
                        android:layout_margin="@dimen/_5sdp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />
                <TextView
                    style="@style/tv_title"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="I did not receive a code"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_resend"
                    style="@style/tv_title"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="RESEND"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/btn_verify"
                    style="@style/btn_primary"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/verify"
                    android:textAllCaps="false" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>