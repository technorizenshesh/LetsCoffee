<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme2" parent="AppTheme">
        <item name="android:windowBackground">@color/gray_f6</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#801519</item>
        <item name="colorPrimaryDark">#801519</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="et_type1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="rb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="tv_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
    </style>
    <style name="tv_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="tv_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="tv_header_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv_type_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/bg_corner_white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="tv_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/gray_6</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="tv_header_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/gray_6</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="img_icon">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="img_icon_home">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_150sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="et_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="et_parent_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/et_bg</item>
    </style>
    <style name="btn_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>
    <style name="btn_border_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">@drawable/btn_border_primary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="line_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_e5</item>
    </style>

    <style name="btn_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <style name="btn_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/btn_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>


    <style name="img_back">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlNormal">@color/gray_6</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>
    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlNormal">@color/gray_6</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:colorControlActivated">#ffea00</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>
</resources>
